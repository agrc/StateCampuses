@import 'nib'
@require 'vars'
@import '../../dijit/themes/claro/claro.css'
@import '../../esri/css/esri.css'
@import '../../bootstrap/dist/css/bootstrap.css'
@import 'Sidebar'
@import 'Map'
@import '../../../src/layer-selector/resources/LayerSelector'
@import '../../../src/toaster/src/resources/Toaster'
@import '../../../src/toaster/src/resources/ToasterItem'

body, html, .app
  width 100%
  height 100%
  margin 0
  padding 0
  overflow hidden
  color #444

.title
  position absolute
  top $container--margin
  left $container--margin
  right $container--margin
  padding 8px
  &__name
    font-family Arial, sans-serif
    margin 5px 0 0 5px
    font-size 30px
    letter-spacing -2px
  &__version
    font-size 10px
    text-decoration none
    vertical-align sub
    margin-left -10px
    letter-spacing 0
    .&:hover
      text-decoration underline

.centerbar
  position absolute
  top $container--margin
  left $sidebar--width + (2 * $container--margin)
  bottom $container--margin
  right $container--margin
  overflow hidden
  &--border-grey
    border 1px solid $border--grey

*focus
    outline 0

.see-through
    opacity .95

.layer-selector-left
  left 38px
